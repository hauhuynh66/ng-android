<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="showAxes" format="boolean"/>
    <attr name="showPoints" format="boolean"/>
    <attr name="background_color" format="color"/>
    <attr name="dash_color" format="color"/>
    <attr name="line_color" format="color"/>
    <attr name="display_text" format="boolean"/>
    <attr name="progress_color" format="color"/>
    <attr name="shadow" format="boolean"/>
    <attr name="line_width" format="dimension"/>
    <attr name="src" format="reference"/>
    <attr name="fill" format="boolean"/>

    <declare-styleable name="Line">
        <attr name="showAxes"/>
        <attr name="showPoints"/>
        <attr name="fill"/>
    </declare-styleable>

    <declare-styleable name="Bar">
        <attr name="showAxes"/>
    </declare-styleable>

    <declare-styleable name="Pie">
        <attr name="donut" format="boolean"/>
        <attr name="shadow"/>
    </declare-styleable>

    <declare-styleable name="Gauge">
        <attr name="display" format="string"/>
        <attr name="background_color"/>
        <attr name="progress_color"/>
        <attr name="display_text"/>
        <attr name="offset" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SunPosition">
        <attr name="dash_color"/>
        <attr name="line_color"/>
        <attr name="bmp_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CircularImage">
        <attr name="line_color"/>
        <attr name="line_width"/>
        <attr name="src"/>
    </declare-styleable>

    <declare-styleable name="Polar">
        <attr name="step" format="integer"/>
    </declare-styleable>
</resources>