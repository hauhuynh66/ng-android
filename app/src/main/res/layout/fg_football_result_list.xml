<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/selectors">
        <Spinner
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.7"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/league"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/league"
            android:id="@+id/date_picker_actions"
            app:layout_constraintHorizontal_bias="0.5"
            android:background="@drawable/ic_baseline_calendar_today"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectors">
        <include
            layout="@layout/fg_list"
            app:layout_constraintBottom_toBottomOf="@id/selectors"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>