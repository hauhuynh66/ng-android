<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="300dp"
        android:layout_margin="40dp"
        android:id="@+id/fg_item_detail_image"
        app:layout_constraintTop_toTopOf="parent"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintTop_toBottomOf="@id/fg_item_detail_image"
        app:layout_constraintBottom_toTopOf="@id/fg_item_detail_sum"
        android:id="@+id/fg_item_detail_count"
        android:max="10"
        android:min="0"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="10pt"
        app:layout_constraintTop_toBottomOf="@id/fg_item_detail_count"
        app:layout_constraintBottom_toTopOf="@id/fg_item_detail_add"
        android:id="@+id/fg_item_detail_sum"
        android:layout_marginVertical="20dp"
        android:gravity="center"
        android:fontFamily="@font/audiowide"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/fg_item_detail_sum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.6"
        android:id="@+id/fg_item_detail_add"/>
</androidx.constraintlayout.widget.ConstraintLayout>