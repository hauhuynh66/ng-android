<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:src="@drawable/ic_wb_cloudy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sub_des"
        android:id="@+id/weather_icon"/>
    <TextView
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:minWidth="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weather_icon"
        app:layout_constraintBottom_toTopOf="@id/sub_data"
        android:id="@+id/sub_des"
        android:fontFamily="@font/audiowide"
        android:textSize="5pt"
        android:textStyle="bold"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sub_des"
        app:layout_constraintBottom_toTopOf="@id/com_weather_dx"
        android:id="@+id/sub_data"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="5pt"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/weather_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/sub_temp"
            android:fontFamily="@font/audiowide"
            android:textStyle="bold"
            android:textColor="@color/red"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="5pt"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/weather_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/sub_humid"
            android:fontFamily="@font/audiowide"
            android:textStyle="bold"
            android:textColor="@color/blue"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/sub_data"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:fontFamily="@font/audiowide"
        android:id="@+id/com_weather_dx"/>
</androidx.constraintlayout.widget.ConstraintLayout>