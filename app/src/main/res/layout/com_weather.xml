<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minWidth="100dp"
    android:padding="20dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:minHeight="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sub_des"
        android:padding="20dp"
        android:id="@+id/weather_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:minWidth="100dp"
        android:layout_height="60dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weather_icon"
        app:layout_constraintBottom_toTopOf="@id/sub_data"
        android:id="@+id/sub_des"
        android:fontFamily="@font/audiowide"
        android:textStyle="bold"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sub_des"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/sub_data"
        android:weightSum="2">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/weather_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/sub_temp"
            android:fontFamily="@font/audiowide"
            android:textStyle="bold"
            android:textColor="@color/red"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/weather_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/sub_humid"
            android:fontFamily="@font/audiowide"
            android:textStyle="bold"
            android:textColor="@color/blue"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>