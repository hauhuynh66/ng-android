<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/current_color"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/red"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/current_color">
        <com.google.android.material.slider.Slider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/blue_slider"
            android:layout_margin="20dp"
            android:valueFrom="0"
            android:valueTo="255"
            app:trackColorActive="@color/red"
            app:thumbColor="@color/red"
            android:value="255"
            android:id="@+id/red_slider"/>
        <com.google.android.material.slider.Slider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:thumbColor="@color/blue"
            app:trackColorActive="@color/blue"
            android:layout_margin="20dp"
            android:valueFrom="0"
            android:valueTo="255"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@id/green_slider"
            app:layout_constraintTop_toBottomOf="@id/red_slider"
            android:id="@+id/blue_slider"/>
        <com.google.android.material.slider.Slider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="20dp"
            app:trackColorActive="@color/green"
            android:valueFrom="0"
            android:valueTo="255"
            app:layout_constraintBottom_toTopOf="@id/color_code"
            app:layout_constraintTop_toBottomOf="@id/blue_slider"
            app:thumbColor="@color/green"
            android:id="@+id/green_slider"/>
        <EditText
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/green_slider"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="#FF0000"
            android:textAllCaps="true"
            android:gravity="center"
            android:id="@+id/color_code"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>