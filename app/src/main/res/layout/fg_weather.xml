<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/progress"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/main_layout">
        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/weather_icon"
            android:id="@+id/city_name"
            android:gravity="center"
            android:fontFamily="@font/audiowide"
            android:textSize="30dp"
            android:text="CITY_NAME"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/weather_icon"
            app:layout_constraintTop_toBottomOf="@id/city_name"
            app:layout_constraintBottom_toTopOf="@id/weather_des"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintTop_toBottomOf="@id/weather_icon"
            app:layout_constraintBottom_toTopOf="@id/weather_data"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/weather_des"
            android:gravity="center"
            android:fontFamily="@font/audiowide"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="DESCRIPTION"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintTop_toBottomOf="@id/weather_des"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:id="@+id/weather_data">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:id="@+id/main_temp"
                android:gravity="center"
                android:fontFamily="@font/audiowide"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="TEMP"
                android:textColor="@color/red"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:id="@+id/main_humid"
                android:gravity="center"
                android:fontFamily="@font/audiowide"
                android:textStyle="bold"
                android:textSize="25dp"
                android:text="HUMID"
                android:textColor="@color/blue"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintTop_toBottomOf="@id/main_layout"
        android:id="@+id/sub_layout">
        <view class="androidx.recyclerview.widget.RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/weather_list"
            android:background="@drawable/bg"
            android:layout_margin="5dp">

        </view>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>