<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        layout="@layout/custom_title"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar_holder"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_holder"
        android:id="@+id/header"
        android:background="@color/blue_1">

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintDimensionRatio="h,1:1"
        android:layout_marginTop="-60dp"
        android:scaleType="fitXY"
        android:id="@+id/photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:paddingVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:id="@+id/email"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/display_name" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/email"
            app:layout_constraintBottom_toTopOf="@id/photo_uri"
            android:id="@+id/display_name"
            android:inputType="text"
            android:gravity="center"
            android:maxLines="1"
            android:layout_marginHorizontal="50dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/display_name"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/photo_uri"
            android:maxLines="1"
            android:gravity="center"
            android:inputType="textUri"
            android:layout_marginHorizontal="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>