<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/toolbar_holder"
        layout="@layout/custom_title"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_holder"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/main_container">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/group2"
            android:id="@+id/group1">
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/audio_subtitle"
                android:id="@+id/audio_title"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:gravity="center" />
            <TextView
                app:layout_constraintTop_toBottomOf="@id/audio_title"
                app:layout_constraintBottom_toTopOf="@id/audio_img"
                android:id="@+id/audio_subtitle"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:gravity="center" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="300dp"
                android:minWidth="300dp"
                android:id="@+id/audio_img"
                app:layout_constraintTop_toBottomOf="@id/audio_subtitle"
                app:layout_constraintBottom_toTopOf="@+id/audio_progress"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/audio_progress"
                app:layout_constraintTop_toBottomOf="@id/audio_img"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
                android:id="@+id/current_time"/>
            <SeekBar
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/audio_img"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/audio_progress"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/audio_progress"
                app:layout_constraintTop_toBottomOf="@id/audio_img"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
                android:id="@+id/duration"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/group1"
            android:id="@+id/group2">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btn_group2"
                android:id="@+id/btn_group1"
                android:visibility="gone">
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/btn_cut"
                    android:id="@+id/btn_fav"/>
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintLeft_toRightOf="@id/btn_fav"
                    app:layout_constraintRight_toLeftOf="@id/btn_timer"
                    android:id="@+id/btn_cut" />
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintLeft_toRightOf="@id/btn_cut"
                    app:layout_constraintRight_toLeftOf="@id/btn_share"
                    android:id="@+id/btn_timer"/>
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintLeft_toRightOf="@id/btn_timer"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/btn_share"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/btn_group1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/btn_group2"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/btn_prev"
                    android:src="@drawable/ic_baseline_repeat_one"
                    android:id="@+id/btn_mode"/>
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintLeft_toRightOf="@id/btn_mode"
                    app:layout_constraintRight_toLeftOf="@id/btn_play"
                    android:src="@drawable/ic_baseline_skip_previous"
                    android:id="@+id/btn_prev" />
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintLeft_toRightOf="@id/btn_prev"
                    app:layout_constraintRight_toLeftOf="@id/btn_next"
                    android:src="@drawable/ic_baseline_play_arrow"
                    android:id="@+id/btn_play"/>
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintLeft_toRightOf="@id/btn_play"
                    app:layout_constraintRight_toLeftOf="@id/btn_list"
                    android:src="@drawable/ic_baseline_skip_next"
                    android:id="@+id/btn_next"/>
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintLeft_toRightOf="@id/btn_next"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/ic_baseline_menu"
                    android:id="@+id/btn_list"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>