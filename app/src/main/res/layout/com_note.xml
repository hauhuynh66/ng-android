<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/bg1">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/com_note_title_group">
        <TextView
            android:id="@+id/com_note_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/audiowide"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:paddingStart="20dp"
            android:text="TITLE"
            android:textSize="10pt"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/com_note_dismiss"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteX="27dp" />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            app:layout_constraintRight_toLeftOf="@id/com_note_delete"
            app:layout_constraintLeft_toRightOf="@id/com_note_title"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_baseline_remove_red_eye"
            android:id="@+id/com_note_dismiss"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/com_note_dismiss"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_baseline_close"
            android:id="@+id/com_note_delete"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/com_note_title_group"
        app:layout_constraintBottom_toTopOf="@id/com_note_displayDate"
        android:fontFamily="@font/audiowide"
        android:textSize="8pt"
        android:minHeight="100dp"
        android:text="Content"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:id="@+id/com_note_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide"
        android:textSize="8pt"
        android:gravity="right"
        android:text="1998-28-08 10:00"
        android:id="@+id/com_note_displayDate"
        app:layout_constraintTop_toBottomOf="@id/com_note_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>