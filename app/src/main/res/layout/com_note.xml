<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="8dp"
    app:cardElevation="20dp"
    app:cardCornerRadius="30dp"
    app:cardBackgroundColor="@color/green_1">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/title_group">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                android:gravity="center_vertical|left"
                android:textSize="8pt"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:id="@+id/title"/>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/guideline"
                app:layout_constraintGuide_end="100dp"
                android:orientation="vertical"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_close"
                app:layout_constraintLeft_toRightOf="@id/hide_btn"
                android:backgroundTint="@color/red"
                android:id="@+id/delete_btn"
                app:layout_constraintRight_toRightOf="parent"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_remove_red_eye"
                android:backgroundTint="@color/red"
                android:id="@+id/hide_btn"
                app:layout_constraintLeft_toRightOf="@id/guideline"
                app:layout_constraintRight_toLeftOf="@id/delete_btn"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/body_group"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/body_text"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/footer_group"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:textSize="6pt"
                android:id="@+id/display_date"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>